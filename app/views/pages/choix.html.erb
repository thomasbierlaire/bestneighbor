<%= content_for :title, title("Choix des services") %>
<%= content_for :description, description("Choix des services : courses et covoiturage") %>

<div class="banner_listes" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "shopping-cart-304843_960_720.png" %>');">

  <div class="banner-content courses">

      <div class="container text-center">

          <div class="row">
            <h2>Courses</h2>
          </div>

          <div class="row">

            <div class="col-sm-6 col-md-6 feature circle">
              <h4>Je prends une liste en charge</h4>
              <%= link_to "Voir les listes", listes_path, class: "btn btn-primary btn-lg" %>
            </div>

            <div class="col-sm-6 col-md-6 feature circle">
              <h4>Pas le temps pour une course ?</h4>
              <%= link_to "Je crée ma liste", new_liste_path, class: "btn btn-primary btn-lg" %>
            </div>

          </div>

      </div>

  </div>

</div>

<div class="spacer"></div>

<div class="banner_listes" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "carpooling-32719_960_720.png" %>');">

    <div class="banner-content covoiturage">

      <div class="container text-center">

          <div class="row">
            <h2>Covoiturage</h2>
          </div>

          <div class="row">

            <div class="col-sm-6 col-md-6 feature circle">
              <h4>Je prends un trajet en charge</h4>
              <%= link_to "Voir les trajets", trajets_path, class: "btn btn-primary btn-lg" %>
            </div>

            <div class="col-sm-6 col-md-6 feature circle">
              <h4>Besoin d'être covoituré ?</h4>
              <%= link_to "Je crée mon trajet", new_trajet_path, class: "btn btn-primary btn-lg" %>
            </div>

          </div>

      </div>

  </div>
</div>


