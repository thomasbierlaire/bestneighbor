<%= content_for :title, title("Mise à jour de ma demande de covoiturage") %>
<%= content_for :description, description("La destination, le nombre de passagers, la date peuvent être modifiés") %>

  <div class="container">
    <div class="spacer"></div>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">

        <%= simple_form_for @trajet do |l| %>
          <%= l.input :destination, placeholder: "Destination", label: "Destination" %>
          <%= l.input :nbpass, placeholder: "Nb de passagers", label: "Nb de passagers" %>
          <%= l.input :date, input_html: { class: 'date' },placeholder: "Date", label: "Date" %>
          <%= l.button :submit, "Enregistrer", class: "btn btn-primary" %>
        <% end %>

      </div>
    </div>
    <div class="spacer"></div>
  </div>
